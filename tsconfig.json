{
  "compilerOptions": {
    "module": "AMD",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "src",
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "@constants/*": ["@constants/*"],
      "@components/*": ["@components/*"],
      "@api/*": ["@api/*"],
      "@types/*": ["@types/*"]
    },
    "typeRoots" : ["./node_modules/@types", "src/@types"]
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
